%%%%%%%%%%%%%%%%%%%%%%%%%%%%%% Color Definitions %%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%

\setbeamercolor{normal text}{%
	fg=lmu@normaltext,
	bg=lmu@background
}

\usebeamercolor[fg]{normal text}

\setbeamercolor{palette primary}{%
	use=normal text,
	fg=normal text.bg,
	bg=normal text.fg
}

\setbeamercolor*{structure}{fg=lmu@normaltext}
\setbeamercolor*{alerted text}{fg=red!75!black}
\setbeamercolor*{author}{fg=lmu@darkgray}
\setbeamercolor*{author in head/foot}{bg=lmu@background1,fg=lmu@mediumgray}
\setbeamercolor*{institute}{fg=lmu@darkgray}
\setbeamercolor*{title}{fg=lmu@green,bg=lmu@background}
\setbeamercolor*{subtitle}{fg=lmu@green,bg=lmu@background}
\setbeamercolor{section in head/foot}{fg=lmu@green}

\setbeamercolor{frametitle}{fg=lmu@green,bg=lmu@background}

