%%%%%%%%%%%%%%%%%%%%%%%%%%%%%% Head & Foot Lines %%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%

\defbeamertemplate*{headline}{lmu theme}{
  % \leavemode%
    \hfill
  \begin{beamercolorbox}[wd=0.6\paperwidth,ht=15mm,sep=3mm,%
      % leftskip=.19\paperwidth,%
      center%
    ]{section in head/foot}
   \ifnum\thepage>1\relax%
      \vskip2pt plus 1cm
      \usebeamerfont{section in head/foot}\color{black}\large\insertframetitle

      \usebeamerfont{subsection in head/foot}\color{lmu@lightgray}\insertframesubtitle
   \else
     % \centering\usebeamerfont{section in head/foot}\inserttitle
   \fi
  \end{beamercolorbox}
  \hfill{}
}

\setbeamertemplate{frametitle}{}
\setbeamertemplate{framesubtitle}{}

\defbeamertemplate*{footline}{lmu theme}{%
  \leavevmode%
  \begin{beamercolorbox}[wd=\paperwidth,ht=2.5ex,dp=1.125ex,leftskip=.5ex,rightskip=1ex]{author in head/foot}
    \ifnum\thepage>1\relax%
      \hbox{
        \usebeamerfont{author in head/foot}\insertshortauthor,
        \usebeamerfont{title in head/foot}\inserttitle
      }\hfill\hbox{
        \raise-0.6ex\hbox{%
          \usebeamertemplate***{navigation symbols}
        } \insertframenumber/\inserttotalframenumber
      }
    \fi
  \end{beamercolorbox}%
  \vskip0pt%
}

