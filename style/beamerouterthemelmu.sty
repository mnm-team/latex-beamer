%%%%%%%%%%%%%%%%%%%%%%%%%%%%%% Head & Foot Lines %%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%

\defbeamertemplate*{headline}{lmu theme}{
    %\leavemode%
    \begin{beamercolorbox}[wd=\paperwidth,ht=17mm,sep=1.5mm,%
        %leftskip=26mm
        leftskip=31.5mm,
        ]{section in head/foot}
    %\begin{beamercolorbox}[wd=\paperwidth,ht=17mm,sep=3mm,leftskip=29mm]{section in head/foot}
        \ifnum\thepage>1\relax%
            \strut
            %\usebeamerfont{section in head/foot}\insertnavigation{.4\paperwidth}
            \usebeamerfont{section in head/foot}\insertsection
            %\insertsectionnavigationhorizontal{\paperwidth}{}{\hskip0pt plus1filll}
            \strut

        \fi
    \end{beamercolorbox}
}

\defbeamertemplate*{footline}{lmu theme}{%
    \leavevmode%
    \begin{beamercolorbox}[wd=\paperwidth,ht=2.5ex,dp=1.125ex,leftskip=.5ex,rightskip=1ex]{author in head/foot}
        \ifnum\thepage>1\relax%
            \hbox{
                \usebeamerfont{author in head/foot}\insertshortauthor, \usebeamerfont{date in head/foot}\inserttitle
            }\hfill\hbox{
                \raise-0.6ex\hbox{%
                    \insertslidenavigationsymbol%
                    \insertframenavigationsymbol%
                    \insertsectionnavigationsymbol%
                    \insertsubsectionnavigationsymbol%
                } \insertframenumber/\inserttotalframenumber
            }
        \fi
    \end{beamercolorbox}%
    \vskip0pt%
}

