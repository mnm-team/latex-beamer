%%%%%%%%%%%%%%%%%%%%%%%%%%%%%% Title & Part Pages %%%%%%%%%%%%%%%%%%%%%%%%%%%%%%

\defbeamertemplate*{title page}{lmu}[1][]{
	\vskip5mm%
	\begin{beamercolorbox}[wd=\paperwidth,leftskip=10mm,#1]{title}
		\usebeamerfont{title}\inserttitle\par%
	\end{beamercolorbox}%
	\vskip5mm%
	\begin{beamercolorbox}[wd=\paperwidth,leftskip=10mm,#1]{subtitle}
		\usebeamerfont{subtitle}\insertsubtitle\par%
	\end{beamercolorbox}
	\vskip10mm%
    % for multiple authors set leftskip to 8
	\begin{beamercolorbox}[wd=\paperwidth,leftskip=10mm,#1]{author}
		\usebeamerfont{author}\insertauthor\par%
	\end{beamercolorbox}
	\vskip5mm%
	\begin{beamercolorbox}[wd=\paperwidth,leftskip=10mm]{institute}
		\usebeamerfont{institute}\insertinstitute\par%
	\end{beamercolorbox}
	\vskip5mm%
	\begin{beamercolorbox}[wd=\paperwidth,leftskip=10mm]{date}
		\usebeamerfont{date}\insertdate\par
	\end{beamercolorbox}
	\vfill%
}

